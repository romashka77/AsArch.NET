@model AsArch.NET.Models.NodeCreateViewModels
@{
    ViewBag.Title = "Выбрать тип объекта учета";
}

<h2>@ViewBag.Title</h2>
<!--#region Назад-->
<div>
    @Html.ActionLink("Назад", "Index", new { id = Model.IdParent }, new { @class = "btn btn-default" })
</div>
<!-- #endregion -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdParent)
    <div class="form-horizontal">
        <h4>NODE</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.NameNode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameNode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameNode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IdItemType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdItemType, ViewBag.ID_ITEMTYPE as IEnumerable<SelectListItem>, "Выберите тип элемента", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdItemType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<!--#region Назад-->
<div>
    @Html.ActionLink("Назад", "Index", new { id = Model.IdParent }, new { @class = "btn btn-default" })
</div>
<!-- #endregion -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

