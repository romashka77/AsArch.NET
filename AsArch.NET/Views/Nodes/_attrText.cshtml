@model AsArch.NET.Models.NodeEditViewModels

<div class="form-group">
    @Html.HiddenFor(model => Model.Attrs[Model.IdAttr].IdAttr)
    @Html.HiddenFor(model => Model.Attrs[Model.IdAttr].IdAttrType)
    @Html.HiddenFor(model => Model.Attrs[Model.IdAttr].NameAttr)
    @Html.Label(Model.Attrs[Model.IdAttr].NameAttr, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Attrs[Model.IdAttr].TEXT_VALUE, 3, 45, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Attrs[Model.IdAttr].TEXT_VALUE, "", new { @class = "text-danger" })
    </div>
</div>
