@using AsArch.NET.Models
@model NodeEditViewModels

@{
    ViewBag.Title = "Редактировать";
    //TempData["Attrs"] = Model.Attrs;
}

<h4>@Model.NameNode</h4>
<hr />
<!--#region Назад-->
<div>
    @Html.ActionLink("Назад", "Index", new { id = Model.IdParent }, new { @class = "btn btn-default" })
</div>
<!-- #endregion -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @*@Html.EditorForModel()*@
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdNode)
        @Html.HiddenFor(model => model.IdItemType)
        @Html.HiddenFor(model => model.IdParent)
        @Html.HiddenFor(model => model.IdGrantParent)
        <div class="form-group">
            @Html.LabelFor(model => model.NameNode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameNode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameNode, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (Model.IdItemType == 1954)
        {
            Html.RenderPartial("_editIskovoeZayvlenie", Model);
        }
        else
        {
            Html.RenderPartial("_editAll", Model);
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<!--#region Назад-->
<div>
    @Html.ActionLink("Назад", "Index", new { id = Model.IdParent }, new { @class = "btn btn-default" })
</div>
<!-- #endregion -->

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
