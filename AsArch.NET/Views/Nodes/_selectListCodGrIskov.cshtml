@model AsArch.NET.Models.NodeEditViewModels

<div class="form-group">
    @Html.HiddenFor(model => model.Attrs[model.IdAttr].IdAttr)
    @Html.HiddenFor(model => model.Attrs[model.IdAttr].IdAttrType)
    @Html.HiddenFor(model => model.Attrs[model.IdAttr].NameAttr)
    @Html.Label(Model.Attrs[Model.IdAttr].NameAttr, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Attrs[model.IdAttr].CHAR_VALUE, ViewBag.ListCodGrIskov as IEnumerable<SelectListItem>, "Выберите код группы исков", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Attrs[model.IdAttr].CHAR_VALUE, "", new { @class = "text-danger" })
    </div>
</div>
